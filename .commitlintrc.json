{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "scope-enum": [
      1,
      "always",
      [
        "dotnet",
        "core",
        "utils",
        "typescript",
        "nxdoc",
        "docs-site",
        "ci",
        "repo",
        "release"
      ]
    ],
    "type-enum": [1, "always", ["test", "docs", "chore", "feat", "fix"]]
  }
}
